{% extends 'equipes/layout.html.twig' %}

{% block body %}

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<section class="global">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                    <div class="col-lg-12">
                        <h2 class="text-center">Formulaire d'inscription</h2>
                        <div class="col-md-offset-3 col-md-6 text-center">
                            <div class="form-group input-lg col-lg-12">
                                <div class="row">
                                {{ form_label(form.email) }}
                                </div>
                                <div class="row">
                                {{ form_errors(form.email) }}
                                </div>
                                <div class="row">
                                {{ form_widget(form.email) }}
                                </div>
                            </div>
                            <div class="form-group input-lg col-lg-12">
                                <div class="row">
                                    {{ form_label(form.username) }}
                                </div>
                                <div class="row">
                                    {{ form_errors(form.username) }}
                                </div>
                                <div class="row">
                                    {{ form_widget(form.username) }}
                                </div>
                            </div>
                            <div class="form-group input-lg col-lg-12">
                                <div class="row">
                                    {{ form_label(form.prenom, {'label': 'Pr√©nom'}) }}
                                </div>
                                <div class="row">
                                    {{ form_errors(form.username) }}
                                </div>
                                <div class="row">
                                    {{ form_widget(form.username) }}
                                </div>
                            </div>
                            <div class="form-group input-lg">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="form-group input-lg">
                                {{ form_row(form.nom_club, { 'label': 'Nom de votre club' }) }}
                            </div>
                            <div class="form-group input-lg">
                                {{ form_row(form.plainPassword) }}
                            </div>
                            <div class="form-group input-lg">
                                 <button class="btn" type="submit" value="{{ 'Envoyer'|trans }}">Envoyer</button>
                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </div>
</section>
    {{ form_end(form) }}

{% endblock body %}
