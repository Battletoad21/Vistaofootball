
    {% trans_default_domain 'FOSUserBundle' %}

    {% block fos_user_content %}
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <link rel="stylesheet" href="{{ asset('build/connexion.css') }}">

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />


        <section class="global">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-8 mx-auto">
                        <div class="card border-none">
                            <div class="card-body">
                                <div class="mt-2">
                                    <img src="{{ asset('build/images/Vistao football bk.02bd3d43.png') }}" alt="logo_connexion" class="brand-logo mx-auto d-block img-fluid rounded-circle"/>
                                </div>
                                <p class="mt-4 text-white lead text-center">
                                    Visualstats
                                </p>
                                <div class="mt-4">
                                    <div class="form-group">
                                        <label for="username">{{ "Nom d'utilisateur"|trans }}</label>
                                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                                    </div>

                                    <div class="form-group">
                                        <label for="password">{{ 'Mot de passe'|trans }}</label>
                                        <input class="form-control" type="password" id="password" name="_password" required="required" />
                                    <div>

                                    <div class="checkbox">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        <label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
                                    </div>

                                    <button type="submit" class="btn btn-primary float-right" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}"
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                        </div>
            </div>
        </div>
            </div>
        </section>
        </form>
    {% endblock fos_user_content %}