{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/admin_equipes.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1>CRÉATION D'UN JOUEUR :</h1>
    <div class="jumbotron" style="color:black;">
        {{ form_start(form, {'method': 'post', 'action': path('joueurs_new', { 'id': id_equipe }) }) }}

        <div class="form-group input-lg col-lg-12">
            <div class="row">
                <label for="">Nom du club</label>
            </div>
            <div class="row">
                <div class="form-control non_modif input-lg">
                    {{ club }}
                </div>
            </div>
        </div>
        <div class="form-group input-lg col-lg-12">
            <div class="row">
                {{ form_label(form.prenom, null, {'label': 'Prénom'}) }}
            </div>
            <div class="row erreurs text-center">
                {{ form_errors(form.prenom) }}
            </div>
            <div class="row">
                {{ form_widget(form.prenom, { 'attr': {'class': 'form-control input-lg'} }) }}
            </div>
        </div>
        <div class="form-group input-lg col-lg-12">
            <div class="row">
                {{ form_label(form.nom) }}
            </div>
            <div class="row erreurs text-center">
                {{ form_errors(form.nom) }}
            </div>
            <div class="row">
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control input-lg'} }) }}
            </div>
        </div>
        <div class="form-group input-lg col-lg-12">
            <div class="row">
                {{ form_label(form.numMaillot, null, {'label': "Numéro du maillot"}) }}
            </div>
            <div class="row erreurs text-center">
                {{ form_errors(form.numMaillot) }}
            </div>
            <div class="row">
                {{ form_widget(form.numMaillot, { 'attr': {'class': 'form-control input-lg'} }) }}
            </div>
        </div>
        <div class="form-group input-lg col-lg-12">
            <div class="row">
                {{ form_label(form.poste, null, {'label': "Poste du joueur"}) }}
            </div>
            <div class="row erreurs text-center">
                {{ form_errors(form.poste) }}
            </div>
            <div class="row">
                {{ form_widget(form.poste, { 'attr': {'class': 'form-control input-lg'} }) }}
            </div>
        </div>

    <div class="boutons_bas">
            <button class="btn-style btn btn-block" type="submit" value="Create">CRÉER</button>
            {{ form_end(form) }}

            </div>
        <a href="{{ path('equipes_index') }}">
            <button class="btn-style btn btn-align btn-block">RETOUR À LA LISTE</button>
        </a>
        </div>
    </div>

{% endblock %}

