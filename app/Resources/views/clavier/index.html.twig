    <div class="container">
        <div class="row">
            <div class="col-xs-12"><p id="resume"></p></div>
        </div>

        <div class="keyboard">
            <div class="row">
                <div value="ADVERSAIRE" class="col-xs-4 adverse_pad highlight_pads counter-click joueur"
                     data-color="red" >
                    <p>ADVERSAIRE<br></p>
                    <div class="counter-count">0</div>
                </div>
                <!-- Trigger modal MI-TEMPS -->
                <div type="button"
                     class="reset-counter pause-btn col-xs-3 middle_pad highlight_pads verticalcenter"
                     data-toggle="modal"
                     data-target=".bs-modal-mi-temps" data-color="#ff0011" style="color: white;">
                    <p><span class="in-btn glyphicon glyphicon-pause" aria-hidden="true"></span> MI-TEMPS </p>

                </div>
                <!-- Trigger modal FIN DU MATCH -->
                <div type="button" class="col-xs-3 middle_pad highlight_pads" data-toggle="modal"
                     data-target=".bs-modal-fin" data-color="#ff0011">
                    <div class="reset-counter pause-btn verticalcenter">
                        <p>FIN DE MATCH</p>
                    </div>
                </div>
                <div class="col-xs-2 middle_pad">
                    <div class="m-wrap verticalcenter">
                        <div class="o-watch-wrap">
                            <div class="o-timer">
                                <span class="t-time"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div  value="1" class="reset-counter joueur verticalcenter col-xs-1 green_pad highlight_pads"
                     data-color="#00c253">
                    <p>1</p>
                </div>
