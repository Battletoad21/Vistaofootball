                        </div>
                        <div value="103" data-color="red" class="reset-counter yellow_pad actionX verticalcenter"
                             data-dismiss="modal">
                            <p>ROUGE</p>
                        </div>
                        <div value="104" data-color="red"
                             class="reset-counter yellow_pad actionX verticalcenter" data-dismiss="modal">
                            <p>PENALTY</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal FIN DU MATCH -->
            <div class="modal fade bs-modal-fin" tabindex="-1" role="dialog"
                 aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <!-- Modal content-->
                    <div class="modal-content" style="background-color: black;">
                        <p>CONFIRMER ?</p>
                        <div class="row">
                            <div class="col-xs-6">
                                    <span class="glyphicon glyphicon-remove"
                                          aria-hidden="true" data-dismiss="modal"></span>
                            </div>

                            <div class="col-xs-6">
                                    <span class="glyphicon glyphicon-ok"
                                          aria-hidden="true" data-dismiss="modal"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal MI-TEMPS -->
            <div class="modal fade bs-modal-mi-temps" tabindex="-1" role="dialog"
                 aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <!-- Modal content-->
                    <div class="modal-content" style="background-color: black;">
                        <p>CONFIRMER ?</p>
                        <div class="row">
                            <a href="#" class="mi-temps verticalcenter">
                                <div value="" data-color="#ff0011" class="yellow_pad actionX" data-dismiss="modal">
                                    <p>FIN MT1</p>
                                </div>
