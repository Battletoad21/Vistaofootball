<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Vistao Football{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

{% block header %}
    <header>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('accueil') }}">
                    <img class="logo" alt="vistao football logo brand" src="{{ asset('build/images/logo_vistao.5263432c.png') }}">
                </a>
            </div>
        </div>
    </nav>
    <!-- end navigation -->
    </header>
{% endblock header %}


{%  block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 accueil_connexion">
            <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 text-center">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <span>Bienvenue {{ app.user.username }}</span>
            </div>
            <div class="col-lg-4 text-right ">
                <a href="{{ path('fos_user_security_logout') }}" class="btn deco">{{ 'Se d√©connecter'|trans({}, 'FOSUserBundle') }}</a>
                {% else %}
            </div>
            <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 text-center">
                <span>Bienvenue sur Vistao Football</span>
            </div>
            <div class="col-lg-4 text-right">
                    <a href="{{ path('fos_user_security_login') }}" class="btn deco">{{ 'Se connecter'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
            </div>
        </div>
    </div>


{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
</div>
{% endblock %}

{% block body %}{% endblock %}
{% block fos_user_content %}{% endblock %}


<!-- these two files now must be included in every page -->

<script src="{{ asset('build/manifest.js') }}"></script>
<script src="{{ asset('build/jquery_jqueryUi.js') }}"></script>
<script src="{{ asset('build/app.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
