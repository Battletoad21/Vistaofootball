{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/admin_equipes.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>ÉDITION DE L'ÉQUIPE :</h1>
        <div class="jumbotron" style="color:black;">

            {{ form_start(edit_form, {'method': 'post', 'action': path('equipes_edit', { 'id': equipe.id }) }) }}

            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(edit_form.championnat, null, {'label': 'Championnat'}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(edit_form.championnat) }}
                </div>
                <div class="row">
                    {{ form_widget(edit_form.championnat, { 'attr': {'class': 'form-control input-lg'} }) }}
                </div>
            </div>

            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(edit_form.categorie, null, {'label': 'Catégorie'}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(edit_form.categorie) }}
                </div>
                <div class="row">
                    {{ form_widget(edit_form.categorie, { 'attr': {'class': 'form-control input-lg'} }) }}
                </div>
            </div>

            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(edit_form.numEquipe, null, {'label': "Numéro d'équipe"}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(edit_form.numEquipe) }}
                </div>
                <div class="row">
                    {{ form_widget(edit_form.numEquipe, { 'attr': {'class': 'form-control input-lg'} }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 boutons_bas">
                    <button class="btn-style btn-align btn btn-block" type="submit" value="Edit" style="width:100%;">
                        ÉDITER
                    </button>
                    {{ form_end(edit_form) }}

                    {{ form_start(delete_form) }}
                    <button class="btn-style btn-align btn btn-block" type="submit" value="Delete" style="width:100%;">
                        SUPPRIMER
                    </button>
                    {{ form_end(delete_form) }}
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <a href="{{ path('equipes_index') }}">
                        <button class="btn-style btn-align btn btn-block" style="width:100%;">RETOUR À LA LISTE</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
