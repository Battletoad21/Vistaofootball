{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>ÉDITION ÉQUIPE / JOUEURS :</h1>
        <div class="jumbotron" style="color:black;">

        {{ form_start(edit_form, {'method': 'post', 'action': path('equipes_new')}) }}

            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(edit_form.championnat, null, {'label': 'Championnat'}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(edit_form.championnat) }}
                </div>
                <div class="row">
                    {{ form_widget(edit_form.championnat) }}
                </div>
            </div>
            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(edit_form.categorie, null, {'label': 'Catégorie'}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(edit_form.categorie) }}
                </div>
                <div class="row">
                    {{ form_widget(edit_form.categorie) }}
                </div>
            </div>
            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(edit_form.numEquipe, null, {'label': "Numéro d'équipe"}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(edit_form.numEquipe) }}
                </div>
                <div class="row">
                    {{ form_widget(edit_form.numEquipe) }}
                </div>
            </div>

            {% for joueur in joueurs  %}
                <div class="form-group input-lg col-lg-12">
                    <div class="row">
                        {{ form_label(edit_form.joueur, null, {'label': 'Joueur'}) }}
                    </div>
                    <div class="row erreurs text-center">
                        {{ form_errors(edit_form.joueur) }}
                    </div>
                    <div class="row">
                        {{ form_widget(edit_form.joueur) }}
                    </div>
                </div>
            {% endfor %}

            <button class="btn-style btn" type="submit" value="Edit">ÉDITER</button>
        {{ form_end(edit_form) }}

            <a href="{{ path('equipes_index') }}"><button class="btn-style btn">RETOUR À LA LISTE</button></a>

                {{ form_start(delete_form) }}
            <button class="btn-style btn" type="submit" value="Delete">SUPPRIMER</button>
                {{ form_end(delete_form) }}

    </div>
    </div>
{% endblock %}
