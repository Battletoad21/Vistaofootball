{% extends 'equipes/layout.html.twig' %}

{% block body %}
    <div class="container">
        <h1>CRÉATION ÉQUIPE :</h1>
        <div class="jumbotron" style="color:black;">
            {{ form_start(form, {'method': 'post', 'action': path('equipes_new')}) }}
            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(form.entraineurId) }}
                </div>
                <div class="row">
                    <div class="row erreurs text-center">
                        {{ form_errors(form.entraineurId) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_widget(form.entraineurId) }}
                </div>
            </div>
            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(form.entraineurNomClub, null, {'label': 'Nom de votre club'}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(form.entraineurNomClub) }}
                </div>
                <div class="row">
                    {{ form_widget(form.entraineurNomClub) }}
                </div>
            </div>
            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(form.championnat) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(form.championnat) }}
                </div>
                <div class="row">
                    {{ form_widget(form.championnat) }}
                </div>
            </div>
            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(form.categorie, null, {'label': 'Catégorie'}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(form.categorie) }}
                </div>
                <div class="row">
                    {{ form_widget(form.categorie) }}
                </div>
            </div>
            <div class="form-group input-lg col-lg-12">
                <div class="row">
                    {{ form_label(form.numEquipe, null, {'label': "Numéro d'équipe"}) }}
                </div>
                <div class="row erreurs text-center">
                    {{ form_errors(form.numEquipe) }}
                </div>
                <div class="row">
                    {{ form_widget(form.numEquipe) }}
                </div>
            </div>
            <button class="btn_equipe btn" type="submit" value="Create">CRÉER</button>
            {{ form_end(form) }}

            <a href="{{ path('equipes_index') }}"><button class="btn_equipe btn">RETOUR À LA LISTE</button></a>

        </div>
    </div>
{% endblock %}
