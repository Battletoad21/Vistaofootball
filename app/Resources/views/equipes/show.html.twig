{% extends 'equipes/layout.html.twig' %}

{% block body %}
    <div class="container">
        <h1>ÉQUIPES</h1>
        <div class="panel panel-default">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ equipe.id }}</td>
                </tr>
                <tr>
                    <th>Entraineurid</th>
                    <td>{{ equipe.entraineurId }}</td>
                </tr>
                <tr>
                    <th>Entraineurnomclub</th>
                    <td>{{ equipe.entraineurNomClub }}</td>
                </tr>
                <tr>
                    <th>Championnat</th>
                    <td>{{ equipe.championnat }}</td>
                </tr>
                <tr>
                    <th>Categorie</th>
                    <td>{{ equipe.categorie }}</td>
                </tr>
                <tr>
                    <th>Numequipe</th>
                    <td>{{ equipe.numEquipe }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <a href="{{ path('equipes_index') }}">
            <button class="btn_equipe btn">RETOUR À LA LISTE</button>
        </a>
        <br>
        <a href="{{ path('equipes_edit', { 'id': equipe.id }) }}">
            <button class="btn_equipe btn">ÉDITER</button>
        </a>

        {{ form_start(delete_form) }}
        <button type="submit" value="Delete" class="btn_equipe btn">SUPPRIMER</button>
        {{ form_end(delete_form) }}

    </div>
{% endblock %}
