{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/stats.css') }}">
{% endblock %}

{% block body %}

    {% include 'stats/base_stats.html.twig' %}

    <div class="container-fluid">
        <div class="row text-center">
            <div class="col-md-offset-3 col-md-6">
                <h1>TIRS</h1>
                <div class="progress">
                    <div class="progress-bar progress-bar-info" style="width: 40%">
                        <p>40%</p>
                    </div>
                    <div class="progress-bar progress-bar-adv" style="width: 60%">
                        <p>60%</p>
                    </div>
                </div>
            </div>
        </div>

        <br>

        <div class="row">
            <div class="col-md-5">
                <div class="stats">
                    <div class="statsshow">
                        <h3>TIRS cadrés</h3>
                        <div class="progress">
                            <div class="progress-bar progress-bar-info-green" style="width: 40%">
                                <p>{{ tirsCadresR }}</p>
                            </div>
                            <div class="progress-bar progress-bar-adv-red" style="width: 60%">
                                <p>{{ tirsNonCadresR }}</p>
                            </div>
                        </div>


                        <h4>DUELS offensifs</h4>
                        <div class="progress">
                            <div class="progress-bar progress-bar-info-green" style="width: 80%">
                                <p>{{ driblesReussiesR }}</p>
                            </div>
                            <div class="progress-bar progress-bar-adv-red" style="width: 20%">
                                <p>{{ driblesEchouesR }}</p>
                            </div>
                        </div>


                        <h4>PASSEURS dangereux</h4>
                        <div class="progress">
                            <div class="progress-bar"
                                 style="width: 52%; background-color: transparent;">
                                <p></p>
                            </div>
                            <div class="progress-bar progress-bar-adv-red" style="width: 48%">
                                <p>48%</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-2 text-center"><a href="{{ path('statsmatch') }}">
                    <span class="glyphicon glyphicon-backward"></span></a>
            </div>



            <div class="col-md-5">
                <div class="stats">
                    <div class="statsshow">
                        <h3>TIRS cadrés</h3>
                        <div class="progress">
                            <div class="progress-bar progress-bar-info-green" style="width: 40%">
                                <p>{{ tirsCadresL }}</p>
                            </div>
                            <div class="progress-bar progress-bar-adv-red" style="width: 60%">
                                <p>{{ tirsNonCadresL }}</p>
                            </div>
                        </div>


                        <h4>DUELS offensifs</h4>
                        <div class="progress">
                            <div class="progress-bar progress-bar-info-green" style="width: 80%">
                                <p>{{ driblesReussiesL }}</p>
                            </div>
                            <div class="progress-bar progress-bar-adv-red" style="width: 20%">
                                <p>{{ driblesEchouesL }}</p>
                            </div>
                        </div>


                        <h4>PASSEURS dangereux</h4>
                        <div class="progress">
                            <div class="progress-bar progress-bar-info-green" style="width: 52%">
                                <p>52%</p>
                            </div>
                            <div class="progress-bar progress-bar-adv-red" style="width: 48%; background-color: transparent;">
                                <p></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>






{% endblock %}


