{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/cpa.css') }}">
{% endblock %}

{% block body %}
<body>

    <div class="container-fluid">
        <ul class="score-board">
            <li class="team-home">RCSA</li>
            <li class="score">20 - 0</li>
            <li class="team-visitor">FCB</li>
            <li class="info">06/06/06</li>
        </ul>
    </div




    <div class="stats">
        <div class="statsshow">
            <h3><a href="#">CPA</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 40%">
                    <p>40%</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 60%">
                    <p>60%</p>
                </div>
            </div>


            <div class=" text-center">
                <span class="glyphicon glyphicon-backward"></span>
            </div>

            <br><br>



            <h3><a href="#">5m50</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 60%">
                    <p>{{ cinqR }}</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 40%">
                    <p>{{ cinqL }}</p>
                </div>
            </div>




            <h3>Touches</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 52%">
                    <p>{{ touchesR }}</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 48%">
                    <p>{{ touchesL }}</p>
                </div>
            </div>



            <h3>Hors-jeux</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 10%">
                    <p>{{ hjAmis }}</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 90%">
                    <p>{{ hjEnnemis }}</p>
                </div>
            </div>

            <h3><a href="#">Corner</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 40%">
                    <p>{{ cornersR }}</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 60%">
                    <p>{{ cornersL }}</p>
                </div>
            </div>



            <h3><a href="#">Fautes</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 50%">
                    <p>{{ fauteR }}</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 50%">
                    <p>{{ fauteL }}</p>
                </div>
            </div>




            <h3>Cartons Jaunes</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 52%">
                    <p>{{ fauteJR }}</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 48%">
                    <p>{{ fauteJR }}</p>
                </div>
            </div>



            <h3>Cartons Rouges</h3>
            <div class="progress">
                <div class="progress-bar progress-bar-info" style="width: 10%">
                    <p>{{ fauteRR }}</p>
                </div>
                <div class="progress-bar progress-bar" style="width: 90%">
                    <p>{{ fauteLR }}</p>
                </div>
            </div>


        </div>
    </div>

</body>




